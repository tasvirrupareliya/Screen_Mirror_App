<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp">

    <RelativeLayout
        android:id="@+id/rl_wifi_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:background="@drawable/rect_round_low"
        android:padding="@dimen/_3sdp">

        <ImageView
            android:id="@+id/ic_wifi"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:id="@+id/wifi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_toRightOf="@id/ic_wifi"
            android:text="Connected"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/_info"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:src="@drawable/ic__ic_info" />


        <ImageView
            android:id="@+id/play_games"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_toRightOf="@id/_info"
            android:src="@drawable/qureka_play_games" />


        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toRightOf="@id/play_games"
            android:src="@drawable/ic_setting" />

    </RelativeLayout>

</RelativeLayout>
